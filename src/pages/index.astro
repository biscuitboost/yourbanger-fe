---
import Layout from '~/layouts/PageLayout.astro';
import DemoCard from '~/components/ui/DemoCard.astro';
import AudioPlayer from '~/components/widgets/AudioPlayer.astro';
import FloatingParticles from '~/components/ui/FloatingParticles.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Personalized AI Songs | Custom Music Gifts in Minutes | YourBanger.com',
  description: 'Create a personalized song gift in 2 minutes. Perfect for birthdays, weddings & special moments. Turn your story into a professional song. $19.99 per song gift. No talent required.',
  ignoreTitleTemplate: true,
  openGraph: {
    title: 'YourBanger.com - Personalized AI Songs for Any Occasion',
    description: 'Turn your story into a custom song. AI-powered personalized music for birthdays, weddings, and special moments.',
    type: 'website',
  },
};

const steps = [
  {
    icon: 'tabler:message-2',
    number: '01',
    title: 'Share Your Story',
    description: 'Tell us about the person, the memories, the inside jokes. The more details, the more personal the song.',
  },
  {
    icon: 'tabler:music',
    number: '02',
    title: 'Pick Your Vibe',
    description: "Rock, pop, country, R&B, ballad â€” choose the style that fits. We'll handle the rest.",
  },
  {
    icon: 'tabler:share',
    number: '03',
    title: 'Watch Them React',
    description: 'Get your song instantly. Share it, play it, record their face when they hear their story in music.',
  },
];

const songs = [
  {
    id: 1,
    title: "Sarah's Legendary 30th",
    genre: 'Rock',
    description: "An arena rock anthem about Sarah's obsession with true crime podcasts, her refusal to share fries, and that time she tried to fight a parking meter.",
    color: 'from-pink-500 to-rose-500',
    audioSrc: '/audio/sample-rock.mp3',
  },
  {
    id: 2,
    title: 'Forever Starts Today',
    genre: 'Ballad',
    description: 'A heartfelt ballad about how they met on a dating app, their terrible first date at a restaurant that gave them food poisoning, and how they knew anyway.',
    color: 'from-blue-500 to-cyan-500',
    audioSrc: '/audio/sample-ballad.mp3',
  },
  {
    id: 3,
    title: 'The Grill Master',
    genre: 'Country',
    description: "A country tribute to Dad's 15-year relationship with his smoker grill, his legendary brisket, and his refusal to let anyone else touch the tongs.",
    color: 'from-amber-500 to-orange-500',
    audioSrc: '/audio/sample-country.mp3',
  },
  {
    id: 4,
    title: 'Reply All Champion',
    genre: 'Pop',
    description: "A funky celebration of Linda's 30 years of legendary potluck contributions, confusing email signatures, and being the only one who knows how to fix the copier.",
    color: 'from-emerald-500 to-teal-500',
    audioSrc: '/audio/sample-pop.mp3',
  },
  {
    id: 5,
    title: 'A Decade of Us',
    genre: 'R&B',
    description: 'A smooth R&B track about surviving IKEA furniture assembly, learning to love their weird pizza topping preferences, and still choosing each other every day.',
    color: 'from-purple-500 to-violet-500',
    audioSrc: '/audio/sample-rnb.mp3',
  },
  {
    id: 6,
    title: 'Against All Odds',
    genre: 'Hip Hop',
    description: 'A hype track about late-night study sessions, surviving on ramen, that one professor who had it out for them, and finally crossing that stage.',
    color: 'from-red-500 to-orange-500',
    audioSrc: '/audio/sample-hiphop.mp3',
  },
];

const testimonials = [
  {
    quote: "I made a song about my dad's obsession with his smoker grill. We played it at the party, and he called me the next morning to play it again.",
    author: 'Marcus T.',
    location: 'Austin, TX',
    tag: 'Birthday',
  },
  {
    quote: "My best friend ugly-cried when I played it at her bridal shower. It mentioned her cat, her terrible parking skills, and the time we got lost in IKEA for 3 hours.",
    author: 'Jenna M.',
    location: 'Seattle, WA',
    tag: 'Wedding',
  },
  {
    quote: "Got one for my wife for our 10th anniversary. Mentioned our first date at that terrible Thai place, the proposal fail, all of it. She's made it her ringtone.",
    author: 'David K.',
    location: 'Chicago, IL',
    tag: 'Anniversary',
  },
  {
    quote: "Made one roasting my coworker who's retiring after 30 years. We played it at his party and he laughed so hard he had to sit down.",
    author: 'Rachel S.',
    location: 'Denver, CO',
    tag: 'Retirement',
  },
  {
    quote: "Created a song for my mom's 60th with all our family inside jokes. She plays it every time someone visits now. Best $19.99 I ever spent.",
    author: 'Alex P.',
    location: 'Miami, FL',
    tag: 'Birthday',
  },
  {
    quote: "Our wedding first dance was a custom song about how we met at a coffee shop. Not a dry eye in the house. Even the DJ was crying.",
    author: 'Sarah & Mike',
    location: 'Portland, OR',
    tag: 'Wedding',
  },
];

const useCases = [
  { icon: 'tabler:gift', title: 'Birthdays', description: 'Forget the gift card. Give them an anthem about their quirks, their wins, their legendary moments.', size: 'large' },
  { icon: 'tabler:heart', title: 'Weddings', description: 'First dance? Make it unforgettable.', size: 'small' },
  { icon: 'tabler:users', title: 'Inside Jokes', description: 'That Vegas trip deserves a song.', size: 'small' },
  { icon: 'tabler:briefcase', title: 'Retirements', description: '30 years of stories, legendary meetings, and office pranks. One epic track to send them off.', size: 'large' },
  { icon: 'tabler:calendar-heart', title: 'Anniversaries', description: 'Your story, set to music.', size: 'small' },
  { icon: 'tabler:sparkles', title: 'Just Because', description: 'Sometimes they need to know they matter.', size: 'small' },
];

const features = [
  'AI-generated lyrics based on your story',
  'Professional-quality music production',
  'Choice of music styles (Rock, Pop, Country, R&B, etc.)',
  'Shareable links + downloadable MP3s',
  'Full editing control before generation',
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="relative pt-24 pb-16 px-6 sm:px-8 lg:px-12 overflow-hidden">
    <!-- Background elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-[var(--primary)]/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-[var(--primary)]/5 rounded-full blur-3xl"></div>
      <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(var(--foreground) 1px, transparent 1px), linear-gradient(90deg, var(--foreground) 1px, transparent 1px); background-size: 60px 60px;"></div>
    </div>

    <FloatingParticles />

    <div class="max-w-6xl mx-auto relative z-10">
      <div class="grid lg:grid-cols-2 gap-10 lg:gap-12 items-center">
        <!-- Left side - Copy -->
        <div class="space-y-6">
          <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-[var(--secondary)] rounded-full border border-[var(--border)]">
            <Icon name="tabler:sparkles" class="w-3.5 h-3.5 text-[var(--primary)]" />
            <span class="text-xs text-[var(--muted-foreground)]">AI-Powered Music Creation</span>
          </div>

          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight text-balance">
            <span class="text-[var(--foreground)]">Turn Your Story Into a </span>
            <span class="text-[var(--primary)]">Song They'll Never Forget</span>
          </h1>

          <p class="text-base sm:text-lg text-[var(--muted-foreground)] max-w-lg leading-relaxed">
            Share your memories, inside jokes, and love. Get a professionally produced, completely unique song in under 2 minutes.
          </p>

          <div class="flex flex-col sm:flex-row gap-3">
            <a
              href="https://app.yourbanger.com/auth?tab=signup"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center bg-[var(--primary)] hover:bg-[var(--primary)]/90 text-white font-medium text-sm px-6 h-11 rounded-lg shadow-lg shadow-[var(--primary)]/25 hover:shadow-[var(--primary)]/40 transition-all"
            >
              Create Your Song
              <Icon name="tabler:arrow-right" class="w-4 h-4 ml-2" />
            </a>
            <a
              href="/examples"
              class="inline-flex items-center justify-center border border-[var(--border)] text-[var(--foreground)] hover:bg-[var(--secondary)] font-medium text-sm px-6 h-11 rounded-lg transition-all"
            >
              Listen to Examples
            </a>
          </div>

          <div class="flex items-center gap-4 pt-2">
            <div class="flex items-center gap-2">
              <div class="flex -space-x-1.5">
                <div class="w-6 h-6 rounded-full bg-gradient-to-br from-pink-400 to-purple-500 border-2 border-[var(--background)]"></div>
                <div class="w-6 h-6 rounded-full bg-gradient-to-br from-blue-400 to-cyan-500 border-2 border-[var(--background)]"></div>
                <div class="w-6 h-6 rounded-full bg-gradient-to-br from-amber-400 to-orange-500 border-2 border-[var(--background)]"></div>
                <div class="w-6 h-6 rounded-full bg-gradient-to-br from-green-400 to-emerald-500 border-2 border-[var(--background)]"></div>
              </div>
              <span class="text-xs text-[var(--muted-foreground)]">10k+ songs created</span>
            </div>
            <div class="h-3 w-px bg-[var(--border)]"></div>
            <div class="flex items-center gap-0.5">
              {[1, 2, 3, 4, 5].map(() => (
                <svg class="w-3.5 h-3.5 text-yellow-500 fill-yellow-500" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
              <span class="text-xs text-[var(--muted-foreground)] ml-1">4.9/5</span>
            </div>
          </div>
        </div>

        <!-- Right side - Interactive Demo -->
        <div>
          <DemoCard />
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-16 px-6 sm:px-8 lg:px-12 bg-[var(--secondary)]/30">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-[var(--foreground)] mb-3">
          Three Steps to <span class="text-[var(--primary)]">Legendary</span>
        </h2>
        <p class="text-sm text-[var(--muted-foreground)] max-w-2xl mx-auto">No musical talent required. Seriously.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-5">
        {steps.map((step) => (
          <div class="group relative p-5 bg-[var(--card)] rounded-xl border border-[var(--border)] hover:border-[var(--primary)]/50 transition-all duration-300">
            <div class="absolute -top-3 -right-3 text-4xl font-bold text-[var(--secondary)] opacity-50 group-hover:text-[var(--primary)]/20 transition-colors">
              {step.number}
            </div>
            <div class="relative z-10">
              <div class="w-10 h-10 bg-[var(--primary)]/10 rounded-lg flex items-center justify-center mb-4 group-hover:bg-[var(--primary)]/20 transition-colors">
                <Icon name={step.icon} class="w-5 h-5 text-[var(--primary)]" />
              </div>
              <h3 class="text-base font-semibold text-[var(--foreground)] mb-2">{step.title}</h3>
              <p class="text-sm text-[var(--muted-foreground)] leading-relaxed">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Sample Songs -->
  <section id="examples" class="py-16 px-6 sm:px-8 lg:px-12">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-[var(--foreground)] mb-3">
          Hear the <span class="text-[var(--primary)]">Magic</span>
        </h2>
        <p class="text-sm text-[var(--muted-foreground)]">Real songs created for real moments</p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {songs.map((song) => (
          <div class="group relative bg-[var(--card)] rounded-xl border border-[var(--border)] overflow-hidden hover:border-[var(--primary)]/50 transition-all duration-300 gradient-border">
            <div class={`absolute inset-0 bg-gradient-to-br ${song.color} opacity-5 group-hover:opacity-10 transition-opacity`}></div>

            <div class="relative p-4">
              <div class="mb-3">
                <span class="inline-block px-2 py-0.5 bg-[var(--primary)]/10 text-[var(--primary)] text-xs font-medium rounded-full mb-2">
                  {song.genre}
                </span>
                <h3 class="text-sm font-semibold text-[var(--foreground)]">{song.title}</h3>
              </div>

              <p class="text-[var(--muted-foreground)] text-xs mb-4 line-clamp-2">{song.description}</p>

              <AudioPlayer src={song.audioSrc} title={song.title} />
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-8">
        <a href="/examples" class="inline-flex items-center justify-center border border-[var(--border)] text-[var(--foreground)] hover:bg-[var(--secondary)] font-medium text-sm px-5 py-2.5 rounded-lg transition-all">
          Explore More Examples
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-14 overflow-hidden">
    <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12 mb-8">
      <div class="text-center">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-[var(--foreground)] mb-3">
          Real Stories, Real <span class="text-[var(--primary)]">Reactions</span>
        </h2>
        <p class="text-sm text-[var(--muted-foreground)]">What happens when you give someone a song about them</p>
      </div>
    </div>

    <div class="relative">
      <!-- Fade edges -->
      <div class="absolute left-0 top-0 bottom-0 w-24 bg-gradient-to-r from-[var(--background)] to-transparent z-10"></div>
      <div class="absolute right-0 top-0 bottom-0 w-24 bg-gradient-to-l from-[var(--background)] to-transparent z-10"></div>

      <div class="flex animate-marquee hover:[animation-play-state:paused]">
        {[...testimonials, ...testimonials].map((testimonial) => (
          <div class="flex-shrink-0 w-[320px] mx-2 p-4 bg-[var(--card)] rounded-xl border border-[var(--border)] gradient-border">
            <div class="flex items-center gap-2 mb-3">
              <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[var(--primary)] to-pink-400"></div>
              <div>
                <p class="font-medium text-[var(--foreground)] text-xs">{testimonial.author}</p>
                <p class="text-[10px] text-[var(--muted-foreground)]">{testimonial.location}</p>
              </div>
              <span class="ml-auto px-2 py-0.5 bg-[var(--primary)]/10 text-[var(--primary)] text-[10px] font-medium rounded-full">
                {testimonial.tag}
              </span>
            </div>
            <blockquote class="text-[var(--foreground)] text-xs leading-relaxed">"{testimonial.quote}"</blockquote>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="py-14 px-6 sm:px-8 lg:px-12">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-[var(--foreground)] mb-3">When Words Aren't Enough</h2>
        <p class="text-sm text-[var(--muted-foreground)]">Perfect for moments that deserve more than a card</p>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3">
        <!-- Large card - Birthdays -->
        <div class="col-span-2 row-span-2 group relative p-5 bg-[var(--card)] rounded-xl border border-[var(--border)] hover:border-[var(--primary)]/50 transition-all duration-300 gradient-border overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--primary)]/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <div class="relative z-10">
            <div class="w-10 h-10 bg-[var(--primary)]/10 rounded-lg flex items-center justify-center mb-4 group-hover:bg-[var(--primary)]/20 transition-colors">
              <Icon name={useCases[0].icon} class="w-5 h-5 text-[var(--primary)]" />
            </div>
            <h3 class="text-lg font-bold text-[var(--foreground)] mb-2">{useCases[0].title}</h3>
            <p class="text-sm text-[var(--muted-foreground)] leading-relaxed">{useCases[0].description}</p>
          </div>
        </div>

        <!-- Small cards -->
        {useCases.slice(1, 3).map((useCase) => (
          <div class="group p-4 bg-[var(--card)] rounded-xl border border-[var(--border)] hover:border-[var(--primary)]/50 transition-all duration-300 gradient-border">
            <div class="w-8 h-8 bg-[var(--primary)]/10 rounded-lg flex items-center justify-center mb-3 group-hover:bg-[var(--primary)]/20 transition-colors">
              <Icon name={useCase.icon} class="w-4 h-4 text-[var(--primary)]" />
            </div>
            <h3 class="text-sm font-semibold text-[var(--foreground)] mb-1">{useCase.title}</h3>
            <p class="text-xs text-[var(--muted-foreground)]">{useCase.description}</p>
          </div>
        ))}

        <!-- Large card - Retirements -->
        <div class="col-span-2 row-span-2 group relative p-5 bg-[var(--card)] rounded-xl border border-[var(--border)] hover:border-[var(--primary)]/50 transition-all duration-300 gradient-border overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--primary)]/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <div class="relative z-10">
            <div class="w-10 h-10 bg-[var(--primary)]/10 rounded-lg flex items-center justify-center mb-4 group-hover:bg-[var(--primary)]/20 transition-colors">
              <Icon name={useCases[3].icon} class="w-5 h-5 text-[var(--primary)]" />
            </div>
            <h3 class="text-lg font-bold text-[var(--foreground)] mb-2">{useCases[3].title}</h3>
            <p class="text-sm text-[var(--muted-foreground)] leading-relaxed">{useCases[3].description}</p>
          </div>
        </div>

        <!-- Small cards -->
        {useCases.slice(4, 6).map((useCase) => (
          <div class="group p-4 bg-[var(--card)] rounded-xl border border-[var(--border)] hover:border-[var(--primary)]/50 transition-all duration-300 gradient-border">
            <div class="w-8 h-8 bg-[var(--primary)]/10 rounded-lg flex items-center justify-center mb-3 group-hover:bg-[var(--primary)]/20 transition-colors">
              <Icon name={useCase.icon} class="w-4 h-4 text-[var(--primary)]" />
            </div>
            <h3 class="text-sm font-semibold text-[var(--foreground)] mb-1">{useCase.title}</h3>
            <p class="text-xs text-[var(--muted-foreground)]">{useCase.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing -->
  <section id="pricing" class="py-14 px-6 sm:px-8 lg:px-12 bg-[var(--secondary)]/30">
    <div class="max-w-lg mx-auto">
      <div class="text-center mb-8">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-[var(--foreground)] mb-3">Simple Pricing</h2>
        <p class="text-sm text-[var(--muted-foreground)]">No subscription. Just a song gift.</p>
      </div>

      <div class="relative">
        <div class="absolute -inset-3 bg-gradient-to-r from-[var(--primary)]/20 via-[var(--primary)]/30 to-[var(--primary)]/20 rounded-2xl blur-xl animate-gradient"></div>

        <div class="relative bg-[var(--card)] border border-[var(--border)] rounded-xl p-6 gradient-border">
          <div class="text-center mb-6">
            <div class="inline-flex items-baseline gap-1.5 mb-1">
              <span class="text-4xl font-bold text-[var(--foreground)]">$19.99</span>
              <span class="text-sm text-[var(--muted-foreground)]">per song gift</span>
            </div>
            <p class="text-xs text-[var(--muted-foreground)]">Includes up to 3 generations (6 tracks) and 1 final track to share</p>
          </div>

          <div class="space-y-2.5 mb-6">
            {features.map((feature) => (
              <div class="flex items-center gap-2">
                <div class="w-4 h-4 bg-[var(--primary)]/20 rounded-full flex items-center justify-center shrink-0">
                  <Icon name="tabler:check" class="w-2.5 h-2.5 text-[var(--primary)]" />
                </div>
                <span class="text-sm text-[var(--foreground)]">{feature}</span>
              </div>
            ))}
          </div>

          <a
            href="https://app.yourbanger.com/auth?tab=signup"
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center bg-[var(--primary)] hover:bg-[var(--primary)]/90 text-white font-medium h-11 leading-[2.75rem] text-sm rounded-lg shadow-lg shadow-[var(--primary)]/25 hover:shadow-[var(--primary)]/40 transition-all"
          >
            Get Started Now
          </a>

          <p class="text-center text-xs text-[var(--muted-foreground)] mt-3">No account required to start creating</p>

          <div class="flex items-center justify-center gap-4 mt-6 pt-6 border-t border-[var(--border)]">
            <div class="flex items-center gap-1.5 text-[var(--muted-foreground)]">
              <Icon name="tabler:shield-check" class="w-3.5 h-3.5" />
              <span class="text-[10px]">Secure Payment</span>
            </div>
            <div class="flex items-center gap-1.5 text-[var(--muted-foreground)]">
              <Icon name="tabler:credit-card" class="w-3.5 h-3.5" />
              <span class="text-[10px]">All Cards Accepted</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-14 px-6 sm:px-8 lg:px-12 relative overflow-hidden">
    <div class="absolute inset-0 flex items-center justify-center opacity-10">
      <div class="flex items-end justify-center gap-[1px] w-full h-20">
        {Array.from({ length: 80 }).map((_, i) => (
          <div
            class="w-0.5 rounded-full bg-[var(--primary)] waveform-bar"
            style={`height: ${20 + Math.sin(i * 0.3) * 15 + Math.sin(i * 0.7) * 10 + 30}%; animation-delay: ${i * 0.05}s;`}
          />
        ))}
      </div>
    </div>

    <div class="max-w-2xl mx-auto text-center relative z-10">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-[var(--foreground)] mb-4 text-balance">
        Someone's Birthday Is Coming Up
      </h2>
      <p class="text-sm sm:text-base text-[var(--muted-foreground)] mb-6 max-w-xl mx-auto">
        You know who it is. You know what makes them special. In 2 minutes, you could have a song they'll never forget.
      </p>
      <a
        href="https://app.yourbanger.com/auth?tab=signup"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center bg-[var(--primary)] hover:bg-[var(--primary)]/90 text-white font-medium text-sm px-6 h-11 rounded-lg shadow-lg shadow-[var(--primary)]/25 hover:shadow-[var(--primary)]/40 transition-all"
      >
        Make Someone a Song
        <Icon name="tabler:arrow-right" class="w-4 h-4 ml-2" />
