---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import AudioPlayer from '~/components/widgets/AudioPlayer.astro';
import TestimonialChat from '~/components/widgets/TestimonialChat.astro';
import CTAButton from '~/components/widgets/CTAButton.astro';

const metadata = {
  title: 'YourBanger - Turn Your Story Into a Song',
  description: 'Create personalized AI-generated songs in minutes. Perfect for birthdays, weddings, and special moments. $14 for 10 songs. No musical talent required.',
  ignoreTitleTemplate: true,
};

const testimonials = [
  { message: 'omg I can\'t stop laughing ðŸ˜‚', name: 'Sarah', align: 'left' as const },
  { message: 'best gift I\'ve ever received', name: 'Mike', align: 'right' as const },
  { message: 'played it 10 times already', name: 'Jessica', align: 'left' as const },
  { message: 'my wife cried (happy tears!)', name: 'Tom', align: 'right' as const },
  { message: 'way better than a hallmark card', name: 'Lisa', align: 'left' as const },
  { message: 'everyone at the party wanted to know how I made it', name: 'Marcus', align: 'right' as const },
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Create Your Song ðŸŽµ',
        href: 'https://app.yourbanger.com/auth?tab=signup',
        target: '_blank',
      },
      {
        text: 'See Examples',
        href: '/examples',
      },
    ]}
  >
    <Fragment slot="title">
      Turn Your Story Into a Song
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-xl md:text-2xl font-medium">
        Personalized AI-generated songs in minutes. No musical talent required.
      </span>
    </Fragment>
  </Hero>

  <!-- How It Works Section -->
  <Steps
    title="How It Works"
    subtitle="Create your personalized song in 3 simple steps"
    items={[
      {
        title: 'Tell Your Story',
        description: 'Share details about the person, memory, or inside joke. Be creative, be funny, be heartfelt.',
        icon: 'tabler:edit',
      },
      {
        title: 'We Make Magic',
        description: 'Our AI creates personalized lyrics and sets them to music in your chosen style. Takes about 2 minutes.',
        icon: 'tabler:wand',
      },
      {
        title: 'Share & Celebrate',
        description: 'Get a custom shareable link. Download the song. Watch them laugh, cry, or both.',
        icon: 'tabler:share',
      },
    ]}
  />

  <!-- Use Cases Section -->
  <Features
    id="use-cases"
    title="Perfect For Every Occasion"
    subtitle="Make someone feel like a legend"
    columns={3}
    items={[
      {
        title: 'ðŸŽ‚ Birthday Surprises',
        description: 'Make them the star of their own birthday anthem',
        icon: 'tabler:cake',
      },
      {
        title: 'ðŸ’ Wedding Toasts',
        description: 'Turn your wedding speech into a memorable song',
        icon: 'tabler:heart',
      },
      {
        title: 'ðŸ˜‚ Inside Jokes',
        description: 'Immortalize those moments that only you two understand',
        icon: 'tabler:mood-smile',
      },
      {
        title: 'ðŸŽ“ Graduations',
        description: 'Celebrate their achievements with a custom graduation song',
        icon: 'tabler:school',
      },
      {
        title: 'ðŸ’ Just Because',
        description: 'Sometimes the best gifts have no reason at all',
        icon: 'tabler:gift',
      },
      {
        title: 'ðŸŽ‰ Any Celebration',
        description: 'Retirement, promotion, or just making someone smile',
        icon: 'tabler:confetti',
      },
    ]}
  />

  <!-- Sample Songs Section -->
  <section class="bg-gray-50 dark:bg-gray-900 py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-black uppercase text-black dark:text-white mb-4">
          Hear the Magic
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Sample songs showing the variety and quality you can create
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
          <div class="mb-3">
            <span class="px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
              Birthday
            </span>
            <span class="ml-2 px-3 py-1 text-xs font-semibold rounded-full bg-pink-100 text-pink-800 dark:bg-pink-900 dark:text-pink-200">
              Rock
            </span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Sarah's Legendary 30th</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            An epic rock anthem about Sarah's terrible karaoke and legendary weekend adventures
          </p>
          <AudioPlayer src="/audio/sample-rock.mp3" title="Sarah's Legendary 30th" />
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
          <div class="mb-3">
            <span class="px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
              Wedding
            </span>
            <span class="ml-2 px-3 py-1 text-xs font-semibold rounded-full bg-pink-100 text-pink-800 dark:bg-pink-900 dark:text-pink-200">
              Ballad
            </span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Forever Starts Today</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            A heartfelt wedding ballad celebrating a couple's journey together
          </p>
          <AudioPlayer src="/audio/sample-ballad.mp3" title="Forever Starts Today" />
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
          <div class="mb-3">
            <span class="px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
              Inside Joke
            </span>
            <span class="ml-2 px-3 py-1 text-xs font-semibold rounded-full bg-pink-100 text-pink-800 dark:bg-pink-900 dark:text-pink-200">
              Country
            </span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Remember That Time?</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            A country tune about that camping trip that shall not be spoken of
          </p>
          <AudioPlayer src="/audio/sample-country.mp3" title="Remember That Time?" />
        </div>
      </div>

      <div class="text-center mt-10">
        <CTAButton text="Hear More Examples" href="/examples" variant="secondary" size="lg" />
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 md:py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Real Reactions
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Here's what people are saying about their songs
        </p>
      </div>

      <TestimonialChat testimonials={testimonials} />
    </div>
  </section>

  <!-- Pricing Preview Section -->
  <section class="bg-gradient-to-r from-purple-600 to-pink-600 py-16 md:py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        $14 for 10 Songs
      </h2>
      <p class="text-xl text-white/90 mb-2">
        That's just $1.40 per song
      </p>
      <p class="text-lg text-white/80 mb-8">
        No subscription. Credits don't expire. Full control over every detail.
      </p>

      <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 md:p-8 mb-8 text-left max-w-2xl mx-auto">
        <h3 class="text-xl font-bold text-white mb-4">What You Get:</h3>
        <ul class="space-y-3 text-white/90">
          <li class="flex items-start">
            <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>AI-generated lyrics based on your story</span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Professional-quality music production</span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Choice of music styles (Rock, Pop, Country, Rap, R&B, etc.)</span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Shareable links + downloads included</span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Full editing control before generation</span>
          </li>
        </ul>
      </div>

      <CTAButton text="Get Started with 10 Songs" size="lg" class="!bg-white !text-purple-600 hover:!bg-gray-100" />
      <p class="text-sm text-white/70 mt-4">
        <a href="/pricing" class="underline hover:text-white">View full pricing details</a>
      </p>
    </div>
  </section>

  <!-- Final CTA Section -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Make My First Song ðŸŽµ',
        href: 'https://app.yourbanger.com/auth?tab=signup',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Make Someone a Legend?
    </Fragment>

    <Fragment slot="subtitle">
      Create your first personalized song in minutes. No musical talent needed.
    </Fragment>
  </CallToAction>
</Layout>
