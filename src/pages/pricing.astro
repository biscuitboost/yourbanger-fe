---
import Layout from '~/layouts/PageLayout.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing - YourBanger',
  description: '$14 for 10 songs. No subscription, credits never expire. Create personalized AI-generated songs.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="bg-pastel-yellow border-b-4 border-black dark:border-white py-12 md:py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-black uppercase text-black dark:text-white mb-4">
        Simple, Transparent Pricing
      </h1>
      <p class="text-xl font-semibold text-black dark:text-white">
        One price. No surprises. No subscription.
      </p>
    </div>
  </section>

  <!-- Pricing Card -->
  <section class="py-16 md:py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="bg-pastel-purple border-5 border-black dark:border-white shadow-brutal-lg p-8 md:p-12 text-black dark:text-white">
        <div class="text-center mb-8">
          <h2 class="text-4xl md:text-5xl font-black uppercase mb-3">$14 for 10 Songs</h2>
          <p class="text-2xl font-bold">That's just $1.40 per song</p>
          <p class="text-lg font-semibold mt-2">No subscription â€¢ Credits never expire</p>
        </div>

        <div class="bg-white border-4 border-black dark:border-white shadow-brutal p-6 md:p-8 mb-8">
          <h3 class="text-xl font-black uppercase mb-4 text-black dark:text-white">What's Included:</h3>
          <ul class="space-y-3 text-black dark:text-white font-semibold">
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <strong>AI-generated lyrics</strong> based on your story
              </div>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <strong>Professional-quality</strong> music production
              </div>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <strong>Choice of music style</strong> (Rock, Pop, Country, Rap, R&B, etc.)
              </div>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <strong>Full editing control</strong> before generation
              </div>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <strong>Shareable link</strong> for each song
              </div>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <strong>Unlimited replays</strong> and downloads
              </div>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <strong>Lifetime access</strong> to your songs
              </div>
            </li>
          </ul>
        </div>

        <div class="text-center">
          <a
            href="https://app.yourbanger.com/auth?tab=signup"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary inline-flex items-center justify-center"
          >
            Get Started with 10 Songs
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Section -->
  <section class="bg-gray-50 dark:bg-gray-900 py-16 md:py-20">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-3xl md:text-4xl font-black uppercase text-black dark:text-white text-center mb-12">
        How We Compare
      </h2>
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">Option</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">Cost</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">Time</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">Customization</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            <tr class="bg-purple-50 dark:bg-purple-900/20">
              <td class="px-6 py-4 font-semibold text-purple-600 dark:text-purple-400">YourBanger</td>
              <td class="px-6 py-4 text-gray-900 dark:text-white">$1.40 per song</td>
              <td class="px-6 py-4 text-gray-900 dark:text-white">3 minutes</td>
              <td class="px-6 py-4 text-gray-900 dark:text-white">Full control</td>
            </tr>
            <tr>
              <td class="px-6 py-4 text-gray-900 dark:text-white">Hire a musician</td>
              <td class="px-6 py-4 text-gray-600 dark:text-gray-400">$100-500+</td>
              <td class="px-6 py-4 text-gray-600 dark:text-gray-400">1-2 weeks</td>
              <td class="px-6 py-4 text-gray-600 dark:text-gray-400">Limited revisions</td>
            </tr>
            <tr>
              <td class="px-6 py-4 text-gray-900 dark:text-white">Greeting card</td>
              <td class="px-6 py-4 text-gray-600 dark:text-gray-400">$5-10</td>
              <td class="px-6 py-4 text-gray-600 dark:text-gray-400">Instant</td>
              <td class="px-6 py-4 text-gray-600 dark:text-gray-400">Generic</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Pricing FAQs -->
  <FAQs
    title="Pricing Questions"
    items={[
      {
        title: 'Do credits expire?',
        description: 'No, use them whenever you want. They never expire.',
      },
      {
        title: 'Can I buy more credits?',
        description: 'Yes, you can purchase additional credits anytime from your dashboard.',
      },
      {
        title: 'What\'s the refund policy?',
        description: 'If you\'re not happy with your song, we\'ll make it right. See our refund policy for details.',
      },
      {
        title: 'Is there a subscription?',
        description: 'Nope! Just buy credits when you need them. No recurring charges.',
      },
    ]}
  />

  <!-- CTA Section -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started with 10 Songs',
        href: 'https://app.yourbanger.com/auth?tab=signup',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Create Something Special?
    </Fragment>

    <Fragment slot="subtitle">
      $14 for 10 songs. No subscription. Start making memories into music.
    </Fragment>
  </CallToAction>
</Layout>
