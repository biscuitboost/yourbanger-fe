---
import Layout from '~/layouts/PageLayout.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing - $1.40 Per Song | Custom AI Music | YourBanger',
  description: 'Get 10 personalized AI songs for just $14 ($1.40 each). No subscription, credits never expire. Create custom birthday songs, wedding songs & more in minutes.',
  openGraph: {
    title: 'YourBanger Pricing - $1.40 Per Custom Song',
    description: '10 songs for $14. No subscription. Credits never expire. Professional AI music creation.',
    type: 'website',
  },
};

// Product schema data for SEO
const productSchema = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  name: 'YourBanger Song Credits',
  description: '10 personalized AI-generated songs. Create custom music for birthdays, weddings, and special moments.',
  brand: {
    '@type': 'Brand',
    name: 'YourBanger'
  },
  offers: {
    '@type': 'Offer',
    price: '14.00',
    priceCurrency: 'USD',
    availability: 'https://schema.org/InStock',
    url: 'https://yourbanger.com/pricing',
    priceValidUntil: '2025-12-31',
    seller: {
      '@type': 'Organization',
      name: 'YourBanger'
    }
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.9',
    reviewCount: '127',
    bestRating: '5',
    worstRating: '1'
  }
};
---

<Layout metadata={metadata}>
  <!-- Product Schema for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} />

  <!-- Hero Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-[var(--foreground)] mb-4">
        <span class="text-[var(--primary)]">$1.40</span> Per Song
      </h1>
      <p class="text-xl text-[var(--muted-foreground)]">
        No subscription. No hidden fees. Just buy credits and make songs.
      </p>
    </div>
  </section>

  <!-- Pricing Card -->
  <section class="py-16 md:py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="relative bg-[var(--card)] border border-[var(--border)] rounded-2xl p-8 md:p-12">
        <div class="absolute -inset-4 bg-[var(--primary)]/20 rounded-3xl blur-2xl -z-10"></div>
        <div class="text-center mb-8">
          <h2 class="text-3xl md:text-4xl font-bold mb-2 text-[var(--foreground)]">$14 for 10 Songs</h2>
          <p class="text-2xl text-[var(--primary)]">That's just $1.40 per song</p>
          <p class="text-lg text-[var(--muted-foreground)] mt-2">No subscription • Credits never expire</p>
        </div>

        <div class="bg-[var(--secondary)]/50 rounded-xl p-6 md:p-8 mb-8 border border-[var(--border)]">
          <h3 class="text-xl font-bold mb-4 text-[var(--foreground)]">What's Included:</h3>
          <ul class="space-y-3 text-[var(--foreground)]">
            <li class="flex items-start">
              <div class="w-5 h-5 bg-[var(--primary)]/20 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                <svg class="w-3 h-3 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div><strong>AI-generated lyrics</strong> based on your story</div>
            </li>
            <li class="flex items-start">
              <div class="w-5 h-5 bg-[var(--primary)]/20 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                <svg class="w-3 h-3 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div><strong>Professional-quality</strong> music production</div>
            </li>
            <li class="flex items-start">
              <div class="w-5 h-5 bg-[var(--primary)]/20 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                <svg class="w-3 h-3 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div><strong>Choice of music style</strong> (Rock, Pop, Country, Rap, R&B, etc.)</div>
            </li>
            <li class="flex items-start">
              <div class="w-5 h-5 bg-[var(--primary)]/20 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                <svg class="w-3 h-3 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div><strong>Full editing control</strong> before generation</div>
            </li>
            <li class="flex items-start">
              <div class="w-5 h-5 bg-[var(--primary)]/20 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                <svg class="w-3 h-3 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div><strong>Shareable link</strong> for each song</div>
            </li>
            <li class="flex items-start">
              <div class="w-5 h-5 bg-[var(--primary)]/20 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                <svg class="w-3 h-3 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div><strong>Unlimited replays</strong> and downloads</div>
            </li>
            <li class="flex items-start">
              <div class="w-5 h-5 bg-[var(--primary)]/20 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                <svg class="w-3 h-3 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div><strong>Lifetime access</strong> to your songs</div>
            </li>
          </ul>
        </div>

        <div class="text-center">
          <a
            href="https://app.yourbanger.com/auth?tab=signup"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-8 py-4 text-lg font-bold bg-[var(--primary)] text-white rounded-xl hover:bg-[var(--primary)]/90 transition-all duration-200 shadow-lg shadow-[var(--primary)]/25"
          >
            Get Started with 10 Songs
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Section -->
  <section class="bg-[var(--secondary)]/30 py-16 md:py-20">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-3xl md:text-4xl font-bold text-[var(--foreground)] text-center mb-4">
        Your Other Options
      </h2>
      <p class="text-center text-[var(--muted-foreground)] mb-12">
        (Spoiler: they're all worse)
      </p>
      <div class="bg-[var(--card)] rounded-2xl border border-[var(--border)] overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-[var(--secondary)]">
              <tr>
                <th class="px-6 py-4 text-left text-sm font-semibold text-[var(--foreground)]">Option</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-[var(--foreground)]">Cost</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-[var(--foreground)]">Time</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-[var(--foreground)]">Personalization</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-[var(--border)]">
              <tr class="bg-[var(--primary)]/10">
                <td class="px-6 py-4 font-semibold text-[var(--primary)]">YourBanger</td>
                <td class="px-6 py-4 text-[var(--foreground)] font-semibold">$1.40</td>
                <td class="px-6 py-4 text-[var(--foreground)]">~3 minutes</td>
                <td class="px-6 py-4 text-[var(--foreground)]">100% custom lyrics & music</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-[var(--foreground)]">Hire a musician on Fiverr</td>
                <td class="px-6 py-4 text-[var(--muted-foreground)]">$100–500+</td>
                <td class="px-6 py-4 text-[var(--muted-foreground)]">3–14 days</td>
                <td class="px-6 py-4 text-[var(--muted-foreground)]">Limited revisions</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-[var(--foreground)]">Cameo video</td>
                <td class="px-6 py-4 text-[var(--muted-foreground)]">$50–500</td>
                <td class="px-6 py-4 text-[var(--muted-foreground)]">1–7 days</td>
                <td class="px-6 py-4 text-[var(--muted-foreground)]">30-second shoutout</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-[var(--foreground)]">Greeting card</td>
                <td class="px-6 py-4 text-[var(--muted-foreground)]">$5–10</td>
                <td class="px-6 py-4 text-[var(--muted-foreground)]">Instant</td>
                <td class="px-6 py-4 text-[var(--muted-foreground)]">Your handwriting (maybe)</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing FAQs -->
  <FAQs
    title="Pricing Questions"
    items={[
      {
        title: 'Do credits expire?',
        description: 'No, use them whenever you want. They never expire.',
      },
      {
        title: 'Can I buy more credits?',
        description: 'Yes, you can purchase additional credits anytime from your dashboard.',
      },
      {
        title: 'What\'s the refund policy?',
        description: 'If you\'re not happy with your song, we\'ll make it right. See our refund policy for details.',
      },
      {
        title: 'Is there a subscription?',
        description: 'Nope! Just buy credits when you need them. No recurring charges.',
      },
    ]}
  />

  <!-- CTA Section -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get 10 Songs for $14',
        href: 'https://app.yourbanger.com/auth?tab=signup',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="title">
      Think About Who'd Love This
    </Fragment>

    <Fragment slot="subtitle">
      That friend with the birthday coming up. Your parents' anniversary. <br class="hidden md:block" />
      $1.40 and 2 minutes is all it takes.
    </Fragment>
  </CallToAction>
</Layout>
