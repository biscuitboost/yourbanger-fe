---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogTagRobots, getStaticPathsBlogTag } from '~/utils/blog';

import Layout from '~/layouts/PageLayout.astro';
import BlogList from '~/components/blog/List.astro';
import Headline from '~/components/blog/Headline.astro';
import Pagination from '~/components/blog/Pagination.astro';
import { SITE } from 'astrowind:config';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  return await getStaticPathsBlogTag({ paginate });
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { page, tag } = Astro.props as Props;

const currentPage = page.currentPage ?? 1;

// Format tag title for display (capitalize words)
const formatTagTitle = (title: string): string => {
  return title.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
};

const formattedTag = formatTagTitle(tag.title);

const metadata = {
  title: `${formattedTag} Gift Ideas & Articles${currentPage > 1 ? ` â€” Page ${currentPage}` : ''} | YourBanger`,
  description: `Explore articles about ${tag.title}. Find gift ideas, inspiration, and guides for personalized songs and meaningful presents.`,
  robots: {
    index: blogTagRobots?.index,
    follow: blogTagRobots?.follow,
  },
  openGraph: {
    type: 'website',
  },
};

// Breadcrumb Schema for tag pages
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: SITE.site,
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Blog',
      item: `${SITE.site}/blog`,
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: formattedTag,
      item: `${SITE.site}/tag/${tag.slug}`,
    },
  ],
};
---

<Layout metadata={metadata}>
  <!-- Breadcrumb Schema for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline subtitle={`All articles tagged with "${tag.title}"`}>{formattedTag}</Headline>
    <BlogList posts={page.data} />
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
  </section>
</Layout>
