---
import Layout from '~/layouts/PageLayout.astro';
import ExampleCard from '~/components/widgets/ExampleCard.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Song Examples | Hear Real Personalized AI Songs | YourBanger.com',
  description: 'Listen to real personalized AI-generated songs. Birthday songs, wedding songs, retirement anthems & more. Hear what you can create in just 2 minutes.',
  openGraph: {
    title: 'YourBanger.com Song Examples - Hear the Magic',
    description: 'Real AI songs created for real moments. Birthday anthems, wedding ballads, and more.',
    type: 'website',
  },
};

const examples = [
  {
    title: "Sarah's Legendary 30th",
    occasion: 'Birthday',
    style: 'Rock',
    context: 'An arena rock anthem about Sarah\'s obsession with true crime podcasts, her refusal to share fries, and that time she tried to fight a parking meter.',
    audioSrc: '/audio/sample-rock.mp3',
    backstory: 'Her friends pooled together to make this for her 30th birthday party. She made everyone watch her play it twice.',
  },
  {
    title: 'Forever Starts Today',
    occasion: 'Wedding',
    style: 'Ballad',
    context: 'A heartfelt ballad about how they met on a dating app, their terrible first date at a restaurant that gave them food poisoning, and how they knew anyway.',
    audioSrc: '/audio/sample-ballad.mp3',
    backstory: 'Best man used this instead of a traditional toast. Not a dry eye in the house.',
  },
  {
    title: 'The Grill Master',
    occasion: 'Fathers Day',
    style: 'Country',
    context: 'A country tribute to Dad\'s 15-year relationship with his smoker grill, his legendary brisket, and his refusal to let anyone else touch the tongs.',
    audioSrc: '/audio/sample-country.mp3',
    backstory: 'His daughter made this for Father\'s Day. He now plays it every time he fires up the grill.',
  },
  {
    title: 'Reply All Champion',
    occasion: 'Retirement',
    style: 'Pop',
    context: 'A funky celebration of Linda\'s 30 years of legendary potluck contributions, confusing email signatures, and being the only one who knows how to fix the copier.',
    audioSrc: '/audio/sample-pop.mp3',
    backstory: 'Her department made this for her retirement party. She asked for the MP3 to play for her grandkids.',
  },
  {
    title: 'A Decade of Us',
    occasion: 'Anniversary',
    style: 'R&B',
    context: 'A smooth R&B track about surviving IKEA furniture assembly, learning to love their weird pizza topping preferences, and still choosing each other every day.',
    audioSrc: '/audio/sample-rnb.mp3',
    backstory: 'He surprised her on their 10th anniversary. She\'s made it her ringtone.',
  },
  {
    title: 'Against All Odds',
    occasion: 'Graduation',
    style: 'Hip Hop',
    context: 'A hype track about late-night study sessions, surviving on ramen, that one professor who had it out for them, and finally crossing that stage.',
    audioSrc: '/audio/sample-hiphop.mp3',
    backstory: 'Her mom made this for her college graduation. The whole family learned the words.',
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-[var(--foreground)] mb-4">
        Hear the <span class="text-[var(--primary)]">Magic</span>
      </h1>
      <p class="text-xl text-[var(--muted-foreground)] max-w-3xl mx-auto">
        Real songs. Real stories. Each one made in about 2 minutes.
      </p>
    </div>
  </section>

  <!-- Filter Section -->
  <section class="py-8 border-b border-[var(--border)]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="flex flex-wrap gap-3 justify-center">
        <span class="text-sm font-medium text-[var(--muted-foreground)] self-center">Filter by:</span>
        <button class="px-4 py-2 text-sm font-medium rounded-full bg-[var(--primary)] text-white">
          All
        </button>
        <button class="px-4 py-2 text-sm font-medium rounded-full bg-[var(--secondary)] text-[var(--muted-foreground)] hover:text-[var(--foreground)]">
          Birthday
        </button>
        <button class="px-4 py-2 text-sm font-medium rounded-full bg-[var(--secondary)] text-[var(--muted-foreground)] hover:text-[var(--foreground)]">
          Wedding
        </button>
        <button class="px-4 py-2 text-sm font-medium rounded-full bg-[var(--secondary)] text-[var(--muted-foreground)] hover:text-[var(--foreground)]">
          Inside Joke
        </button>
        <button class="px-4 py-2 text-sm font-medium rounded-full bg-[var(--secondary)] text-[var(--muted-foreground)] hover:text-[var(--foreground)]">
          Celebration
        </button>
      </div>
    </div>
  </section>

  <!-- Examples Grid -->
  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {examples.map((example) => (
          <ExampleCard
            title={example.title}
            occasion={example.occasion}
            style={example.style}
            context={example.context}
            audioSrc={example.audioSrc}
            backstory={example.backstory}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Music Styles Section -->
  <section class="bg-[var(--secondary)]/30 py-16 md:py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-[var(--foreground)] mb-6">
        Choose Your Style
      </h2>
      <p class="text-lg text-[var(--muted-foreground)] mb-8">
        Pick the perfect genre to match your story's vibe
      </p>
      <div class="flex flex-wrap gap-3 justify-center">
        {['Rock', 'Pop', 'Country', 'Rap', 'R&B', 'Ballad', 'Indie', 'Electronic', 'Jazz'].map((style) => (
          <span class="px-5 py-3 text-sm font-semibold rounded-lg bg-[var(--card)] text-[var(--foreground)] border border-[var(--border)]">
            {style}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Make Your Own',
        href: 'https://yourbanger.com/create',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="title">
      You've Got Someone In Mind
    </Fragment>

    <Fragment slot="subtitle">
      That person you were thinking about while listening to these? <br class="hidden md:block" />
      Their song is 2 minutes away.
    </Fragment>
  </CallToAction>
</Layout>
