---

<Layout metadata={metadata}>
  <!-- SoftwareApplication Schema for SEO -->
  <SchemaMarkup 
    type="software"
    data={{
      name: "YourBanger AI Song Generator",
      description: "Create personalized AI-generated songs in 2 minutes with custom lyrics and professional vocals.",
      aggregateRating: {
        ratingValue: "4.9",
        reviewCount: "500"
      }
    }}
  />

  <!-- FAQ Schema for SEO -->
  <SchemaMarkup 
    type="faq"
    data={{
      mainEntity: faqSchemaQuestions
    }}
  />

  <!-- Hero Section -->
  <section class="py-16 md:py-24 relative overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-[var(--primary)]/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 text-center relative z-10">
      <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-[var(--secondary)] rounded-full border border-[var(--border)] mb-6">
        <Icon name="tabler:sparkles" class="w-4 h-4 text-[var(--primary)]" />
        <span class="text-sm text-[var(--muted-foreground)]">AI-Powered Music Creation</span>
      </div>

      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-[var(--foreground)] mb-6">
        <span class="text-[var(--primary)]">AI Song Generator</span>
      </h1>

      <p class="text-xl md:text-2xl text-[var(--foreground)] font-medium mb-4">
        Create a Professional Custom Song in 2 Minutes
      </p>

      <p class="text-lg text-[var(--muted-foreground)] max-w-3xl mx-auto mb-8">
        Turn your story, memories, and inside jokes into a professionally produced song. 
        Our AI song generator creates personalized music with custom lyrics and professional vocals 
        for any occasion—birthdays, weddings, anniversaries, and more.
      </p>

      <!-- Value Props -->
      <div class="flex flex-wrap justify-center gap-4 mb-8">
        {valueProps.map((prop) => (
          <div class="flex items-center gap-2 px-4 py-2 bg-[var(--card)] rounded-full border border-[var(--border)]">
            <Icon name={prop.icon} class="w-5 h-5 text-[var(--primary)]" />
            <span class="text-sm text-[var(--foreground)]">{prop.text}</span>
          </div>
        ))}
      </div>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
        <a
          href="/create"
          class="inline-flex items-center justify-center bg-[var(--primary)] hover:bg-[var(--primary)]/90 text-white font-medium text-lg px-8 h-14 rounded-xl shadow-lg shadow-[var(--primary)]/25 hover:shadow-[var(--primary)]/40 transition-all"
        >
          Create Your Song Now
          <Icon name="tabler:arrow-right" class="w-5 h-5 ml-2" />
        </a>
        <a
          href="/examples"
          class="inline-flex items-center justify-center border border-[var(--border)] text-[var(--foreground)] hover:bg-[var(--secondary)] font-medium text-lg px-8 h-14 rounded-xl transition-all"
        >
          Listen to Examples
        </a>
      </div>

      <!-- Trust Signals -->
      <div class="flex flex-wrap items-center justify-center gap-4 text-sm text-[var(--muted-foreground)]">
        <div class="flex items-center gap-1">
          <div class="flex">
            {[1, 2, 3, 4, 5].map(() => (
              <svg class="w-4 h-4 text-yellow-500 fill-yellow-500" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <span>4.9★ from 500+ reviews</span>
        </div>
        <span class="hidden sm:inline">|</span>
        <span>$19.99 per song</span>
        <span class="hidden sm:inline">|</span>
        <span>No subscription</span>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="py-16 bg-[var(--secondary)]/30">
