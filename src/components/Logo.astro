<span
  class="logo-container self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 dark:text-white whitespace-nowrap flex items-center gap-2"
>
  <svg class="mic-icon" width="20" height="24" viewBox="0 0 20 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Mic head -->
    <rect class="mic-head" x="5" y="1" width="10" height="14" rx="5" fill="currentColor"/>
    <!-- Mic grille lines -->
    <line x1="7" y1="4" x2="13" y2="4" stroke="white" stroke-width="1" opacity="0.5"/>
    <line x1="7" y1="6.5" x2="13" y2="6.5" stroke="white" stroke-width="1" opacity="0.5"/>
    <line x1="7" y1="9" x2="13" y2="9" stroke="white" stroke-width="1" opacity="0.5"/>
    <line x1="7" y1="11.5" x2="13" y2="11.5" stroke="white" stroke-width="1" opacity="0.5"/>
    <!-- Mic stand -->
    <path d="M10 15V20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M6 20H14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <!-- Sound waves -->
    <path class="wave wave-1" d="M2 6C2 6 1 8 2 10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.6"/>
    <path class="wave wave-2" d="M18 6C18 6 19 8 18 10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.6"/>
  </svg>
  YourBanger.com
</span>

<style>
  .wave {
    opacity: 0;
    animation: wave-pulse 2s ease-in-out infinite;
  }

  .wave-1 {
    animation-delay: 0s;
  }

  .wave-2 {
    animation-delay: 0.5s;
  }

  @keyframes wave-pulse {
    0%, 100% {
      opacity: 0;
      transform: scaleY(0.8);
    }
    50% {
      opacity: 0.6;
      transform: scaleY(1.1);
    }
  }

  .logo-container:hover .mic-icon {
    animation: mic-bounce 0.4s ease-in-out;
  }

  @keyframes mic-bounce {
    0%, 100% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(-5deg);
    }
    75% {
      transform: rotate(5deg);
    }
  }
</style>
