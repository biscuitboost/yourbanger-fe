---
interface Props {
  text?: string;
  href?: string;
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  text = 'Get Started',
  href = 'https://app.yourbanger.com/song/create',
  variant = 'primary',
  size = 'md',
  class: className = '',
} = Astro.props;

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const variantClasses = {
  primary:
    'bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white shadow-lg hover:shadow-xl',
  secondary:
    'border-2 border-purple-600 text-purple-600 hover:bg-purple-50 dark:border-pink-600 dark:text-pink-600 dark:hover:bg-gray-800',
};
---

<a
  href={href}
  class={`inline-block font-semibold rounded-lg transition-all duration-200 transform hover:scale-105 ${sizeClasses[size]} ${variantClasses[variant]} ${className}`}
  target="_blank"
  rel="noopener noreferrer"
>
  {text}
</a>
