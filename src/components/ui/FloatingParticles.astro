---
// Floating music note particles for background ambiance
const musicSymbols = ["♪", "♫", "♬", "♩"];
const notes = Array.from({ length: 24 }, (_, i) => ({
  id: i,
  x: Math.random() * 100,
  delay: Math.random() * 8,
  duration: 15 + Math.random() * 10,
  symbol: musicSymbols[Math.floor(Math.random() * musicSymbols.length)],
}));
---

<div class="pointer-events-none absolute inset-0 overflow-hidden opacity-40" aria-hidden="true">
  {notes.map((note) => (
    <div
      class="music-note absolute text-2xl text-[var(--muted-foreground)]"
      style={`left: ${note.x}%; bottom: -50px; animation-delay: ${note.delay}s; animation-duration: ${note.duration}s;`}
    >
      {note.symbol}
    </div>
  ))}
</div>

<style>
  @keyframes floatUp {
    0% {
      transform: translateY(0);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(-100vh);
      opacity: 0;
    }
  }
  
  .music-note {
    animation: floatUp linear infinite;
  }
</style>
