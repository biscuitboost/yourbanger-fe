---
// Floating music note particles for background ambiance
const particles = Array.from({ length: 12 }, (_, i) => ({
  id: i,
  x: Math.random() * 100,
  delay: Math.random() * 10,
  duration: 15 + Math.random() * 10,
  size: 12 + Math.random() * 8,
}));
---

<div class="absolute inset-0 overflow-hidden pointer-events-none">
  {particles.map((particle) => (
    <div
      class="absolute bottom-0 text-[var(--primary)] opacity-20"
      style={`left: ${particle.x}%; animation: float ${particle.duration}s linear infinite; animation-delay: ${particle.delay}s;`}
    >
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        width={particle.size} 
        height={particle.size} 
        viewBox="0 0 24 24" 
        fill="none" 
        stroke="currentColor" 
        stroke-width="2" 
        stroke-linecap="round" 
        stroke-linejoin="round"
      >
        <path d="M9 18V5l12-2v13" />
        <circle cx="6" cy="18" r="3" />
        <circle cx="18" cy="16" r="3" />
      </svg>
    </div>
  ))}
</div>
